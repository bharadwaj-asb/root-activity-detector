{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AWSCloudTrailCreateLogStream",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream"
            ],
            "Resource": [
                "arn:aws:logs:<YOUR-REGION>:<YOUR-LOG-GROUP>*",
                "arn:aws:logs:<YOUR-REGION>:<YOUR-LOG-STREAM>*"
            ]
        },
        {
            "Sid": "AWSCloudTrailPutLogEvents",
            "Effect": "Allow",
            "Action": [
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:<YOUR-REGION>:<YOUR-LOG-GROUP>*",
                "arn:aws:logs:<YOUR-REGION>:<YOUR-LOG-STREAM>*"
            ]
        }
    ]
}
